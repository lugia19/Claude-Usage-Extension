{
    "manifest_version": 2,
    "name": "Claude Usage Tracker",
    "version": "4.0",
    "description": "Helps you track your claude.ai usage caps based on tokens sent, and syncs across devices using firebase.",
    "author": "lugia19",
    "browser_specific_settings": {
        "gecko": {
            "id": "claude_usage_tracker@lugia19.com"
        }
    },
    "background": {
        "scripts": [
            "lib/browser-polyfill.min.js",
            "lib/o200k_base.js",
            "background_mv2.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://claude.ai/*"
            ],
            "js": [
                "lib/browser-polyfill.min.js",
                "lib/o200k_base.js",
                "content-components/content_utils.js",
                "content-components/ui-dataclasses.js",
                "content-components/notification_card.js",
                "content-components/sidebar_ui.js",
                "content-components/chat_ui.js",
                "ui.js",
                "injections/rate-limit-watcher.js",
				"injections/webrequest-polyfill.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "alarms",
        "webRequest",
        "tabs",
        "*://claude.ai/*",
        "https://raw.githubusercontent.com/*",
        "https://api.anthropic.com/*",
        "https://github.com/*"
    ],
    "web_accessible_resources": [
        "default-config.json",
        "lib/browser-polyfill.min.js",
        "lib/o200k_base.js",
        "kofi-button.png",
        "debug.html",
        "update_patchnotes.txt",
        "tracker-styles.css"
    ],
    "icons": {
        "512": "icon512.png",
        "128": "icon128.png"
    }
}